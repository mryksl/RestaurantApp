@page
@model MyRestaurantApp.Pages.Order.OrderPickupModel
@using MyRestaurantApp.Utility
@{
    ViewData["Title"] = "OrderPickup";
}

<h2>Order Pickup</h2>

<form method="get" asp-page="OrderPickup">
    <div style="height:60px;">
        <div class="col-sm-12">
            <div class="row">
                <div class="col-sm-12 text-right">
                    <label class="radio-inline">
                        @Html.RadioButton("option", "name") Name
                    </label>
                    <label class="radio-inline">
                        @Html.RadioButton("option", "email") Email
                    </label>
                    <label class="radio-inline">
                        @Html.RadioButton("option", "phone") Phone
                    </label>
                    <label class="radio-inline">
                        @Html.RadioButton("option", "order") Order No
                    </label>
                </div>
            </div>
            <div class="row">
                <div class="pull-right">
                    <button type="submit" name="submit" value="Search" class="btn btn-primary">
                        <span class="glyphicon glyphicon-search"></span>Search
                    </button>
                </div>
                <div class="pull-right">
                    @Html.Editor("search",new { htmlAttributes = new { @class ="form-control" } })
                </div>
            </div>
        </div>
    </div>

    <hr />


    @*Search funcionality here:!*@
    <br />
    @if (Model.OrderDetailViewModel.Count > 0)
    {
        @foreach (var item in Model.OrderDetailViewModel)
        {
            <div class="thumbnail row">
                @Html.Partial("_IndividualOrderDetails", item)
                <div class="col-sm-2">
                    @if (item.OrderHeader.Status.Equals(SD.StatusReady))
                    {
                        <a asp-page="OrderPickupDetails" asp-route-orderId="@item.OrderHeader.Id" class="btn btn-success">
                            <span class="glyphicon glyphicon-list"></span> Pick Up Details
                        </a>
                    }
                    else
                    {
                        <button type="submit" disabled class="btn btn-primary">@item.OrderHeader.Status</button>
                    }

                </div>
            </div>
        }
    }
    else
    {
        <p>No order's available</p>
    }
</form>