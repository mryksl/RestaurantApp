@page
@model MyRestaurantApp.Pages.MenuItems.DeleteModel
@{
    ViewData["Title"] = "Delete";
}


<br />
<h2>Delete Menu Item</h2>
<hr />

<form method="post" enctype="multipart/form-data">
    <div class="form-border row">
        <fieldset disabled>


            <input type="hidden" asp-for="@Model.MenuItem.Id" />
            <div class="col-sm-8">
                <div class="form-group row">
                    <div class="col-sm-4">
                        <label asp-for="MenuItem.Name" class="custom-label"></label>
                    </div>
                    <div class="col-sm-8">
                        <input asp-for="MenuItem.Name" class="form-control" />
                    </div>

                </div>
                <div class="form-group row">
                    <div class="col-sm-4">
                        <label asp-for="MenuItem.Description" class="custom-label"></label>
                    </div>
                    <div class="col-sm-8">
                        <input asp-for="MenuItem.Description" class="form-control" />
                    </div>

                </div>
                <div class="form-group row">
                    <div class="col-sm-4">
                        <label asp-for="MenuItem.Price" class="custom-label"></label>
                    </div>
                    <div class="col-sm-8">
                        <input asp-for="MenuItem.Price" class="form-control" />
                    </div>

                </div>

                <div class="form-group row">
                    <div class="col-sm-4">
                        <label asp-for="MenuItem.Spicyness" class="custom-label"></label>
                    </div>
                    <div class="col-sm-8">
                        <select asp-for="MenuItem.Spicyness" asp-items="Html.GetEnumSelectList<MenuItem.ESpicy>()" class="form-control"></select>
                    </div>
                </div>
                <div class="form-group row">
                    <div class="col-sm-4">
                        <label asp-for="MenuItem.CategoryId" class="custom-label"></label>
                    </div>
                    <div class="col-sm-8">
                        <input asp-for="MenuItem.CategoryType.Name" class="form-control" />
                    </div>
                </div>
                <div class="form-group row">
                    <div class="col-sm-4">
                        <label asp-for="MenuItem.FoodTypeId" class="custom-label"></label>
                    </div>
                    <div class="col-sm-8">
                        <input asp-for="MenuItem.FoodType.Name" class="form-control" />
                    </div>
                </div>
            </div>
            <div class="col-sm-3 col-sm-offset-1">
                <img src="@Model.MenuItem.Image" width="100%" style="border-radius:5px; border:1px solid #bbb9b9;" />
            </div>
        </fieldset>
        <br />

        <div class="form-group row col-sm-12">

            <input type="submit" value="Delete" class="btn btn-sm btn-danger" />
            <a asp-page="Index" class="btn btn-sm btn-success">Back to list</a>
        </div>
    </div>
</form>
