@page
@model MyRestaurantApp.Pages.FoodTypes.EditModel
@{
    ViewData["Title"] = "Edit";
}

<br />
<h2>Edit Food Type</h2>
<hr />

<form method="post">
    <div class="form-border">
        <input type="hidden" asp-for="FoodType.Id" />
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class="form-group row">
            <div class="col-sm-2">
                <label asp-for="FoodType.Name" class="custom-label"></label>
            </div>
            <div class="col-sm-4">
                <input asp-for="FoodType.Name" class="form-control" />
            </div>
            <span asp-validation-for="FoodType.Name" class="text-danger"></span>
        </div>

        <br />
        <div class="form-group">
            <input type="submit" value="Update" class="btn btn-sm btn-primary" />
            <a asp-page="Index" class="btn btn-sm btn-success">Back to list</a>
        </div>
    </div>
</form>

@section scripts{
    @{ await Html.RenderPartialAsync("_ValidationScriptsPartial"); }

}

